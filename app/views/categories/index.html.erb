<p id="notice"><%= notice %></p>

<h1>カテゴリー一覧</h1>

<table>
  <thead>
    <tr>
      <th>カテゴリーの名前</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.categoryname %></td>
        <td><%= link_to '見る', category %></td>
        <td><%= link_to '編集', edit_category_path(category) %></td>
        <td><%= link_to '消す', category, method: :delete, data: { confirm: 'ほんとに？？？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいカテゴリー', new_category_path %>
