<p id="notice"><%= notice %></p>

<h1>ユーザーリスト</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー</th>
      <th>名前</th>
      <th>パスワード</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.user_id %></td>
        <td><%= user.username %></td>
        <td><%= user.password %></td>
        <td><%= link_to '見る', user %></td>
        <td><%= link_to '編集', edit_user_path(user) %></td>
        <td><%= link_to '消す', user, method: :delete, data: { confirm: 'ほんとに？？？？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいユーザー', new_user_path %>
